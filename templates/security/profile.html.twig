{% extends 'base.html.twig' %}

{% block title %}Редактирование профиля{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('profile') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('profile') }}
{% endblock %}

{% block body %}
    <div class="page">
        {% include('block/aside.html.twig') %}
        <div class="page-wrapper">
            {% include 'block/header.html.twig'
                with {
                header: 'Редактирование профиля',
            }
            %}
            <div class="page-body">
                <div class="container-xl">
                    <div class="card">
                        <div class="card-body">
                            {{ form(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
